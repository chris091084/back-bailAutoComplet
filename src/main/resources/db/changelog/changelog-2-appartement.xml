<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="ton_nom">
        <createTable tableName="appartements">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="bailleur_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_appartement_bailleur" references="bailleur(id)"/>
            </column>
            <column name="adress" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type_chauffage" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="chauffage_collectif" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="bank_name" type="text"/>
            <column name="restrictions" type="text"/>
            <column name="construction_period" type="varchar(50)"/>
            <column name="surface" type="decimal(10,2)"/>
            <column name="charges" type="decimal(10,2)"/>
            <column name="loyers" type="decimal(10,2)"/>
            <column name="caution" type="decimal(10,2)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
